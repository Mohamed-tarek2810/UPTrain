@model Courses

@{
    ViewData["Title"] = "Course Details";
    
}

<div class="container mt-5">
    <div class="card shadow-lg border-0 rounded-3">

       
        <img src="@(string.IsNullOrEmpty(Model.ImageUrl) ? "/images/default-course.jpg": Model.ImageUrl)"
             class="card-img-top" alt="@Model.Title"  style="max-height:300px; object-fit:cover;" />

        <div class="card-body">
            <h2 class="card-title fw-bold text-primary">@Model.Title</h2>
            <h5 class="text-muted mb-3">
                <i class="bi bi-tag-fill"></i> @Model.Category
            </h5>
            <p class="card-text fs-5">
                @Model.Description
            </p>

            <div class="mt-4">
                <p><strong>Created By:</strong> @Model.Creator?.UserName</p>
                <p><strong>Lessons:</strong> @Model.Lessons.Count</p>
                <p><strong>Quizzes:</strong> @Model.Quizzes.Count</p>
                <p><strong>Enrolled Students:</strong> @Model.Enrollments.Count</p>
            </div>
        </div>

        <div class="card-footer text-end">
            <a asp-action="Courses" class="btn btn-outline-secondary">⬅ Back to Courses</a>
            <a href="#" class="btn btn-success">Enroll Now</a>
        </div>
    </div>
</div>
