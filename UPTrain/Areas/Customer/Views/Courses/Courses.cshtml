@model IEnumerable<Courses>

@{
    ViewData["Title"] = "Courses";
 
}

<div class="container mt-5">
    <h2 class="mb-4 text-center fw-bold">Available Courses</h2>

    <div class="row row-cols-1 row-cols-md-3 g-4">
        @foreach (var course in Model)
        {
            <div class="col">
                <div class="card h-100 shadow-sm border-0 rounded-3">

                    
                    <img src="@(string.IsNullOrEmpty(course.ImageUrl)  ? "/images/default-course.jpg" : course.ImageUrl)"
                         class="card-img-top" alt="@course.Title"style="height:200px; object-fit:cover;" />

                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title fw-bold text-primary">@course.Title</h5>
                        <h6 class="text-muted mb-2">
                            <i class="bi bi-tag-fill"></i> @course.Category
                        </h6>
                        <p class="card-text flex-grow-1">
                            @if (!string.IsNullOrEmpty(course.Description) && course.Description.Length > 120)
                            {
                                @($"{course.Description.Substring(0, 120)}...")
                            }
                            else
                            {
                                @course.Description
                            }
                        </p>
                        <a asp-action="CoursesDetails" asp-route-id="@course.CourseId" class="btn btn-outline-primary mt-auto w-100">
                            View Details
                        </a>
                    </div>
                    <div class="card-footer text-muted small text-center">
                        Created By: @course.Creator?.UserName
                    </div>
                </div>
            </div>
        }
    </div>
</div>
