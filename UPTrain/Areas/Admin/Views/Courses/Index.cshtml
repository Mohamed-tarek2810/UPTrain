@model IEnumerable<Courses>

@{
    ViewData["Title"] = "Courses List";
}

<h2 class="mb-3">Courses List</h2>

<a asp-action="Create" class="btn btn-primary mb-3">+ Add New Course</a>

<table class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Creator</th>
            <th>Lessons</th>
            <th>Quizzes</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var course in Model)
        {
            <tr>
                <td>@course.Title</td>
                <td>@course.Description</td>
                <td>@course.Creator?.UserName</td>
                <td>@(course.Lessons?.Count() ?? 0)</td>
                <td>@(course.Quizzes?.Count() ?? 0)</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@course.CourseId" class="btn btn-warning btn-sm">Edit</a>
                    <a asp-action="Details" asp-route-id="@course.CourseId" class="btn btn-info btn-sm">Details</a>
                    <a asp-action="Delete" asp-route-id="@course.CourseId" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
