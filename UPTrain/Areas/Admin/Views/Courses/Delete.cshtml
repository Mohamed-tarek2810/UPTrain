@model Courses

@{
    ViewData["Title"] = "Delete Course";
}

<h2 class="mb-3 text-danger">Delete Course</h2>

<div>
    <h4>Are you sure you want to delete this course?</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Title</dt>
        <dd class="col-sm-10">@Model.Title</dd>

        <dt class="col-sm-2">Category</dt>
        <dd class="col-sm-10">@Model.Category</dd>

        <dt class="col-sm-2">Creator</dt>
        <dd class="col-sm-10">@Model.Creator</dd>

        <dt class="col-sm-2">Image</dt>
        <dd class="col-sm-10"> 
            <img src="@Model.ImageUrl" alt="Course Image" class="img-thumbnail" style="max-width:200px;" />
        </dd>

        <dt class="col-sm-2">Description</dt>
        <dd class="col-sm-10">@Model.Description</dd>
    </dl>
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="CourseId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
