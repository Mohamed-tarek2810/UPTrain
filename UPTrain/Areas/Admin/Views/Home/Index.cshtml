@{
    ViewData["Title"] = "Admin Dashboard";
    
}

<div class="container mt-5">
    <h1 class="mb-4">📊 Admin Dashboard</h1>

    <div class="row">
        <div class="col-md-3">
            <div class="card text-center shadow-sm p-3 mb-4 bg-white rounded">
                <h4>Total Courses</h4>
                <p class="display-6">@ViewBag.TotalCourses</p>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card text-center shadow-sm p-3 mb-4 bg-white rounded">
                <h4>Total Users</h4>
                <p class="display-6">@ViewBag.TotalUsers</p>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card text-center shadow-sm p-3 mb-4 bg-white rounded">
                <h4>Total Enrollments</h4>
                <p class="display-6">@ViewBag.TotalEnrollments</p>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card text-center shadow-sm p-3 mb-4 bg-white rounded">
                <h4>Total Quizzes</h4>
                <p class="display-6">@ViewBag.TotalQuizzes</p>
            </div>
        </div>
    </div>
</div>
